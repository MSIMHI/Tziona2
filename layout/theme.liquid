<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ page_title }} - {{ shop.name }}</title>
    {{ content_for_header }}
    {{ 'tziona.css' | asset_url | stylesheet_tag }}
    {{ 'tziona.js' | asset_url | script_tag }}
</head>
<body class="template-{{ template.name }}">

    {% sections 'tz-header-group' %}

    <main role="main">
        {{ content_for_layout }}
    </main>

    {% sections 'tz-footer-group' %}
    {% section 'tz-drawer' %}

</body>
</html>