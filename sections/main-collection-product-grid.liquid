    },
    {
      "type": "header",
      "content": "Category Filters"
    },
    {
      "type": "checkbox",
      "id": "show_category_filters",
      "default": true,
      "label": "Show Category Filter Buttons",
      "info": "Display collection categories as filter buttons above products"
    },
    {
      "type": "text",
