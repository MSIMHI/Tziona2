{{ 'tz-main-collection-product-grid.css' | asset_url | stylesheet_tag }}

<script src="{{ 'tz-main-collection-product-grid.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding tz-collection-section" data-section-type="tz-collection-grid" data-section-id="{{ section.id }}">
  {%- paginate collection.products by section.settings.products_per_page -%}
    <div class="tz-collection-container">
      {% comment %} Category Filter Buttons Row {% endcomment %}
      {%- if section.settings.show_category_filters -%}
        <div class="tz-collection-filter-row">
          {%- comment -%} All Products Button {%- endcomment -%}
          <a href="{{ routes.collections_url }}/all" class="tz-collection-filter-button{% if collection.handle == 'all' %} is-active{% endif %}">
            {%- if section.settings.filter_all_text != blank -%}
              {{ section.settings.filter_all_text }}
            {%- else -%}
              {{ 'collections.general.view_all' | t }}
            {%- endif -%}
          </a>
          
          {%- comment -%} Show main collections as category filters {%- endcomment -%}
          {%- for collection_item in collections -%}
            {%- if collection_item.products_count > 0 and collection_item.handle != collection.handle -%}
              <a href="{{ collection_item.url }}" class="tz-collection-filter-button{% if collection_item.handle == collection.handle %} is-active{% endif %}">
                {{ collection_item.title }}
              </a>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endif -%}

      <div class="tz-collection-layout">
        {% comment %} Sidebar Filters {% endcomment %}
        <aside class="tz-collection-sidebar">
          {% comment %} Availability Filter {% endcomment %}
          <div class="tz-collection-sidebar-section">
            <h3 class="tz-collection-filter-header">
              <span class="tz-collection-filter-title">
                {%- if section.settings.filter_availability_label != blank -%}
                  {{ section.settings.filter_availability_label }}
                {%- else -%}
                  {{ 'products.facets.filter_button' | t }}
                {%- endif -%}
              </span>
              <span class="tz-collection-filter-icon material-icons-outlined">remove</span>
            </h3>
            <div class="tz-collection-checkbox-group">
              <label class="tz-collection-checkbox-label">
                <input class="tz-collection-checkbox" type="checkbox" name="availability" value="in_stock">
                <span>{{ 'products.product.inventory_out_of_stock_continue_selling' | t }}</span>
              </label>
              <label class="tz-collection-checkbox-label">
                <input class="tz-collection-checkbox" type="checkbox" name="availability" value="out_of_stock">
                <span>{{ 'products.product.inventory_out_of_stock' | t }}</span>
              </label>
            </div>
          </div>

          {% comment %} Price Filter {% endcomment %}
          <div class="tz-collection-sidebar-section">
            <h3 class="tz-collection-filter-header">
              <span class="tz-collection-filter-title">
                {%- if section.settings.filter_price_label != blank -%}
                  {{ section.settings.filter_price_label }}
                {%- else -%}
                  {{ 'templates.cart.price' | t | default: 'Price' }}
                {%- endif -%}
              </span>
              <span class="tz-collection-filter-icon material-icons-outlined">remove</span>
            </h3>
            <div class="tz-collection-price-range">
              <input class="tz-collection-price-input" data-type="min" type="range" min="0" max="1000" value="0" step="10">
              <div class="tz-collection-price-inputs">
                <div class="relative">
                  <input class="tz-collection-price-input" data-type="max" type="number" value="570" placeholder="570">
                  <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 text-sm">{{ cart.currency.symbol }}</span>
                </div>
                <span class="tz-collection-price-separator">{{ 'products.facets.to' | t }}</span>
                <div class="relative">
                  <input class="tz-collection-price-input" data-type="min" type="number" value="0" placeholder="0">
                  <span class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 text-sm">{{ cart.currency.symbol }}</span>
                </div>
              </div>
            </div>
          </div>

          {% comment %} Color Filter {% endcomment %}
          <div class="tz-collection-sidebar-section">
            <h3 class="tz-collection-filter-header">
              <span class="tz-collection-filter-title">
                {%- if section.settings.filter_color_label != blank -%}
                  {{ section.settings.filter_color_label }}
                {%- else -%}
                  {{ 'products.product.color' | t | default: 'Color' }}
                {%- endif -%}
              </span>
              <span class="tz-collection-filter-icon material-icons-outlined">remove</span>
            </h3>
            <div class="tz-collection-color-grid">
              <button class="tz-collection-color-swatch tz-collection-color-black" data-color="black" aria-label="Black"></button>
              <button class="tz-collection-color-swatch tz-collection-color-orange" data-color="orange" aria-label="Orange"></button>
              <button class="tz-collection-color-swatch tz-collection-color-gray" data-color="gray" aria-label="Gray"></button>
              <button class="tz-collection-color-swatch tz-collection-color-white" data-color="white" aria-label="Light Gray"></button>
              <button class="tz-collection-color-swatch tz-collection-color-navy" data-color="navy" aria-label="Navy"></button>
              <button class="tz-collection-color-swatch tz-collection-color-olive" data-color="olive" aria-label="Olive"></button>
            </div>
          </div>

          {% comment %} Product Type Filter {% endcomment %}
          <div class="tz-collection-sidebar-section">
            <h3 class="tz-collection-filter-header">
              <span class="tz-collection-filter-title">
                {%- if section.settings.filter_product_type_label != blank -%}
                  {{ section.settings.filter_product_type_label }}
                {%- else -%}
                  {{ 'products.product.type' | t | default: 'Product Type' }}
                {%- endif -%}
              </span>
              <span class="tz-collection-filter-icon material-icons-outlined">remove</span>
            </h3>
            <div class="tz-collection-checkbox-group">
              {%- if collection.all_types.size > 0 -%}
                {%- for product_type in collection.all_types -%}
                  {%- if product_type != blank and product_type != '' -%}
                    <label class="tz-collection-checkbox-label">
                      <input class="tz-collection-checkbox" type="checkbox" name="product_type" value="{{ product_type | escape }}">
                      <span>{{ product_type }}</span>
                    </label>
                  {%- endif -%}
                {%- endfor -%}
              {%- else -%}
                {%- comment -%} Fallback if no product types available {%- endcomment -%}
                <label class="tz-collection-checkbox-label">
                  <input class="tz-collection-checkbox" type="checkbox" name="product_type" value="accessories">
                  <span>
                    {%- if section.settings.filter_product_type_accessories != blank -%}
                      {{ section.settings.filter_product_type_accessories }}
                    {%- else -%}
                      Accessories
                    {%- endif -%}
                  </span>
                </label>
                <label class="tz-collection-checkbox-label">
                  <input class="tz-collection-checkbox" type="checkbox" name="product_type" value="backpacks">
                  <span>
                    {%- if section.settings.filter_product_type_backpacks != blank -%}
                      {{ section.settings.filter_product_type_backpacks }}
                    {%- else -%}
                      Backpacks
                    {%- endif -%}
                  </span>
                </label>
              {%- endif -%}
            </div>
          </div>
        </aside>

        {% comment %} Main Content {% endcomment %}
        <main class="tz-collection-main">
          {% comment %} Sort Controls {% endcomment %}
            <div class="tz-collection-sort-row">
            <div class="tz-collection-product-count">
              {%- if collection.results_count -%}
                {{ 'products.facets.product_count_simple' | t: count: collection.results_count }}
              {%- else -%}
                {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
              {%- endif -%}
            </div>
            <form class="tz-collection-sort-form" action="{{ collection.url }}" method="get" onsubmit="return false;">
              {%- if collection.current_tags -%}
                {%- for tag in collection.current_tags -%}
                  <input type="hidden" name="constraint" value="{{ tag | escape }}">
                {%- endfor -%}
              {%- endif -%}
              <div class="tz-collection-sort-group">
                <label for="SortBy" class="tz-collection-sort-label">{{ 'products.facets.sort_by_label' | t }}</label>
                <div class="tz-collection-sort-select-wrapper">
                  {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
                  <select
                    name="sort_by"
                    class="tz-collection-sort-select"
                    id="SortBy"
                    aria-describedby="a11y-refresh-page-message"
                  >
                    {%- for option in collection.sort_options -%}
                      <option
                        value="{{ option.value | escape }}"
                        {% if option.value == sort_by %}selected="selected"{% endif %}
                      >
                        {{ option.name | escape }}
                      </option>
                    {%- endfor -%}
                  </select>
                  <span class="tz-collection-sort-icon material-icons-outlined">expand_more</span>
                </div>
              </div>
            </form>
          </div>

          {% comment %} Product Grid {% endcomment %}
          {%- if collection.products.size == 0 -%}
            <div class="tz-collection-empty">
              <h2>{{ 'sections.collection_template.empty' | t }}</h2>
              <p>
                {{
                  'sections.collection_template.use_fewer_filters_html'
                  | t: link: collection.url, class: 'tz-collection-link'
                }}
              </p>
            </div>
          {%- else -%}
            <div class="tz-collection-product-grid">
              {%- for product in collection.products -%}
                {% assign lazy_load = false %}
                {%- if forloop.index > 2 -%}
                  {%- assign lazy_load = true -%}
                {%- endif -%}

                <a href="{{ product.url }}" class="tz-collection-product-item">
                  <div class="tz-collection-product-image-container">
                    {%- if product.available == false -%}
                      <span class="tz-collection-product-badge tz-collection-product-badge--out-of-stock">{{ 'products.product.inventory_out_of_stock' | t }}</span>
                    {%- elsif product.compare_at_price > product.price -%}
                      <span class="tz-collection-product-badge tz-collection-product-badge--sale">{{ 'products.product.on_sale' | t }}</span>
                    {%- endif -%}

                    {%- if product.featured_image -%}
                      <img
                        alt="{{ product.featured_image.alt | escape }}"
                        class="tz-collection-product-image"
                        src="{{ product.featured_image | image_url: width: 600 }}"
                        loading="{% if lazy_load %}lazy{% else %}eager{% endif %}"
                      >
                    {%- endif -%}
                  </div>

                  <h3 class="tz-collection-product-title">{{ product.title | escape }}</h3>

                  <div class="tz-collection-product-price{% if product.compare_at_price > product.price %} tz-collection-product-price--with-sale{% endif %}">
                    {%- if product.compare_at_price > product.price -%}
                      <span class="tz-collection-product-price-current">{{ product.price | money }}</span>
                      <span class="tz-collection-product-price-original">{{ product.compare_at_price | money }}</span>
                    {%- else -%}
                      {{ product.price | money }}
                    {%- endif -%}
                  </div>

                  {%- comment -%} Color Variants {%- endcomment -%}
                  {%- if product.variants.size > 1 -%}
                    {%- liquid
                      assign color_option = null
                      assign color_option_index = null
                      
                      for option in product.options_with_values
                        assign option_name_down = option.name | downcase
                        if option_name_down contains 'color' or option_name_down contains 'צבע' or option_name_down contains 'צֶבַע'
                          assign color_option = option
                          assign color_option_index = forloop.index0
                          break
                        else
                          assign is_color_option = false
                          for value in option.values
                            assign value_down = value | downcase
                            if value_down contains 'red' or value_down contains 'blue' or value_down contains 'green' or value_down contains 'yellow' or value_down contains 'black' or value_down contains 'white' or value_down contains 'gray' or value_down contains 'purple' or value_down contains 'pink' or value_down contains 'orange' or value_down contains 'brown' or value_down contains 'navy' or value_down contains 'teal' or value_down contains 'maroon' or value_down contains 'אדום' or value_down contains 'כחול' or value_down contains 'ירוק' or value_down contains 'צהוב' or value_down contains 'שחור' or value_down contains 'לבן' or value_down contains 'אפור' or value_down contains 'סגול' or value_down contains 'ורוד' or value_down contains 'כתום' or value_down contains 'חום' or value_down contains 'ים' or value_down contains 'טורקיז' or value_down contains 'בורדו'
                              assign is_color_option = true
                            endif
                          endfor
                          if is_color_option
                            assign color_option = option
                            assign color_option_index = forloop.index0
                            break
                          endif
                        endif
                      endfor
                    -%}
                    
                    {%- if color_option -%}
                      <div class="tz-collection-product-variants">
                        {%- for value in color_option.values limit: 4 -%}
                          {%- liquid
                            assign variant_bg = '#6b7280'
                            
                            if value == 'שָׁחוֹר'
                              assign variant_bg = '#000000'
                            elsif value == 'כְּחוֹל'
                              assign variant_bg = '#3b82f6'
                            elsif value contains 'אדום' or value == 'red'
                              assign variant_bg = '#ef4444'
                            elsif value contains 'ירוק' or value == 'green'
                              assign variant_bg = '#10b981'
                            elsif value contains 'צהוב' or value == 'yellow'
                              assign variant_bg = '#f59e0b'
                            elsif value contains 'לבן' or value == 'white'
                              assign variant_bg = '#ffffff'
                            elsif value contains 'אפור' or value == 'gray'
                              assign variant_bg = '#6b7280'
                            elsif value contains 'סגול' or value == 'purple'
                              assign variant_bg = '#8b5cf6'
                            elsif value contains 'ורוד' or value == 'pink'
                              assign variant_bg = '#ec4899'
                            elsif value contains 'כתום' or value == 'orange'
                              assign variant_bg = '#f97316'
                            elsif value contains 'חום' or value == 'brown'
                              assign variant_bg = '#92400e'
                            elsif value contains 'ים' or value == 'navy'
                              assign variant_bg = '#1e3a8a'
                            elsif value contains 'טורקיז' or value == 'teal'
                              assign variant_bg = '#14b8a6'
                            elsif value contains 'בורדו' or value == 'maroon'
                              assign variant_bg = '#7f1d1d'
                            endif
                          -%}
                          <div class="tz-collection-variant-swatch" style="background-color: {{ variant_bg }}"></div>
                        {%- endfor -%}
                      </div>
                    {%- endif -%}
                  {%- endif -%}
                </a>
              {%- endfor -%}
            </div>

            {%- if paginate.pages > 1 -%}
              <div class="tz-collection-load-more">
                <button class="tz-collection-load-more-button">
                  {{ 'products.facets.show_more' | t }}
                </button>
              </div>
            {%- endif -%}
          {%- endif -%}
        </main>
      </div>
    </div>
  {%- endpaginate -%}
</div>

{% schema %}
