      "info": "Leave empty to use translation"
    },
    {
      "type": "text",
      "id": "filter_color_label",
      "label": "Color Filter Label",
      "info": "Leave empty to use translation"
    },
    {
      "type": "text",
      "id": "filter_product_type_label",
      "label": "Product Type Filter Label",
      "info": "Leave empty to use translation"
    },
    {
      "type": "text",
      "id": "filter_product_type_accessories",
      "label": "Accessories Option Text",
      "info": "Leave empty to use translation"
    },
    {
      "type": "text",
      "id": "filter_product_type_backpacks",
      "label": "Backpacks Option Text",
      "info": "Leave empty to use translation"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "t:sections.main-collection-product-grid.settings.columns_desktop.label"
