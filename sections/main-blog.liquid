{{ 'tz-blog.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- paginate blog.articles by 6 -%}
  <div class="tz-blog-section section-{{ section.id }}-padding">
    <h1 class="tz-blog-title">
      {{ 'blogs.blog.title' | t | default: blog.title | escape }}
    </h1>

    {%- comment -%} Collect all unique tags from articles {%- endcomment -%}
    {%- assign all_tags = '' -%}
    {%- for article in blog.articles -%}
      {%- for tag in article.tags -%}
        {%- unless all_tags contains tag -%}
          {%- if all_tags == '' -%}
            {%- assign all_tags = tag -%}
          {%- else -%}
            {%- assign all_tags = all_tags | append: ',' | append: tag -%}
          {%- endif -%}
        {%- endunless -%}
      {%- endfor -%}
    {%- endfor -%}
    {%- assign tag_array = all_tags | split: ',' -%}

    {%- if tag_array.size > 0 -%}
      <div class="tz-blog-filters">
        <div class="tz-blog-filters-title">
          {{ 'blogs.blog.filter_by_tags' | t | default: 'Filter by Tags' }}
        </div>
        <div class="tz-blog-tags">
          <a href="#" class="tz-blog-tag tz-blog-tag--active" data-tag="all">
            {{ 'blogs.blog.all' | t | default: 'All' }}
          </a>
          {%- for tag in tag_array -%}
            <a href="#" class="tz-blog-tag" data-tag="{{ tag | handleize }}">
              {{ tag | upcase }}
            </a>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}

    <div class="tz-blog-grid">
      {%- for article in blog.articles -%}
        {%- assign article_tags_handles = '' -%}
        {%- for tag in article.tags -%}
          {%- if article_tags_handles == '' -%}
            {%- assign article_tags_handles = tag | handleize -%}
          {%- else -%}
            {%- assign article_tags_handles = article_tags_handles | append: ',' | append: tag | handleize -%}
          {%- endif -%}
        {%- endfor -%}
        
        <a href="{{ article.url }}" class="tz-blog-card" data-tags="{{ article_tags_handles }}">
          <figure class="tz-blog-card-figure">
            {%- if article.image -%}
              <img
                src="{{ article.image | image_url: width: 800 }}"
                alt="{{ article.image.alt | escape }}"
                class="tz-blog-card-image"
                loading="lazy"
                width="{{ article.image.width }}"
                height="{{ article.image.height }}"
              >
            {%- else -%}
              <div class="tz-blog-card-image" style="background-color: #f5f5f5;"></div>
            {%- endif -%}
            <div class="tz-blog-card-overlay">
              {%- if article.tags.size > 0 -%}
                <div class="tz-blog-card-category">
                  {%- for tag in article.tags -%}
                    {{ tag | upcase }}{% unless forloop.last %}, {% endunless %}
                  {%- endfor -%}
                </div>
              {%- endif -%}
              <h2 class="tz-blog-card-title">{{ article.title | escape }}</h2>
              <div class="tz-blog-card-meta">
                {%- if section.settings.show_author and article.author != blank -%}
                  <span class="tz-blog-card-meta-author">
                    {{ 'blogs.article.by' | t | default: 'By' }} {{ article.author }}
                  </span>
                {%- endif -%}
                {%- if section.settings.show_date -%}
                  {%- if section.settings.show_author and article.author != blank -%}
                    <span> â€¢ </span>
                  {%- endif -%}
                  <span>{{ article.published_at | time_tag: format: 'date' }}</span>
                {%- endif -%}
              </div>
            </div>
          </figure>
        </a>
      {%- endfor -%}
    </div>

    {%- if paginate.pages > 1 -%}
      {%- render 'pagination', paginate: paginate -%}
    {%- endif -%}
  </div>
{%- endpaginate -%}

<script src="{{ 'tz-blog.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "t:sections.main-blog.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "t:sections.main-blog.settings.show_date.label"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": true,
      "label": "t:sections.main-blog.settings.show_author.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
