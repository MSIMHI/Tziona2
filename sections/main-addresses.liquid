{{ 'tz-main-account-addresses.css' | asset_url | stylesheet_tag }}
<script src="{{ 'tz-main-account-addresses.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  #shopify-section-{{ section.id }} {
    --tz-pt: {{ section.settings.padding_top }}px;
    --tz-pb: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

{%- paginate customer.addresses by 12 -%}
  <div class="tz-addresses-section" data-customer-addresses>
    <div class="tz-addresses-container">
      <div class="tz-addresses-header">
        <h1 class="tz-addresses-title">{{ 'customer.addresses.title' | t }}</h1>
        <a href="{{ routes.account_url }}" class="tz-return-link">
          <svg viewBox="0 0 24 24" width="20" height="20" stroke="currentColor" stroke-width="2" fill="none">
            <path d="M19 12H5M12 19l-7-7 7-7" />
          </svg>
          {{ 'customer.account.return' | t }}
        </a>
      </div>

      <div class="tz-address-new">
        <button
          type="button"
          class="tz-add-address-btn"
          aria-expanded="false"
          aria-controls="AddAddress"
          data-toggle-address-form
        >
          {{ 'customer.addresses.add_new' | t }}
        </button>

        <div id="AddAddress" class="tz-address-form-container">
          <h2 class="tz-address-form-title">{{ 'customer.addresses.add_new' | t }}</h2>
          {%- form 'customer_address', customer.new_address, class: 'tz-address-form' -%}
            <div class="tz-form-field">
              <label for="AddressFirstNameNew" class="tz-form-label">{{ 'customer.addresses.first_name' | t }}</label>
              <input
                type="text"
                id="AddressFirstNameNew"
                name="address[first_name]"
                value="{{ form.first_name }}"
                autocomplete="given-name"
                placeholder="{{ 'customer.addresses.first_name' | t }}"
                class="tz-form-input"
              >
            </div>
            <div class="tz-form-field">
              <label for="AddressLastNameNew" class="tz-form-label">{{ 'customer.addresses.last_name' | t }}</label>
              <input
                type="text"
                id="AddressLastNameNew"
                name="address[last_name]"
                value="{{ form.last_name }}"
                autocomplete="family-name"
                placeholder="{{ 'customer.addresses.last_name' | t }}"
                class="tz-form-input"
              >
            </div>
            <div class="tz-form-field tz-form-full">
              <label for="AddressCompanyNew" class="tz-form-label">{{ 'customer.addresses.company' | t }}</label>
              <input
                type="text"
                id="AddressCompanyNew"
                name="address[company]"
                value="{{ form.company }}"
                autocomplete="organization"
                placeholder="{{ 'customer.addresses.company' | t }}"
                class="tz-form-input"
              >
            </div>
            <div class="tz-form-field tz-form-full">
              <label for="AddressAddress1New" class="tz-form-label">{{ 'customer.addresses.address1' | t }}</label>
              <input
                type="text"
                id="AddressAddress1New"
                name="address[address1]"
                value="{{ form.address1 }}"
                autocomplete="address-line1"
                placeholder="{{ 'customer.addresses.address1' | t }}"
                class="tz-form-input"
              >
            </div>
            <div class="tz-form-field tz-form-full">
              <label for="AddressAddress2New" class="tz-form-label">{{ 'customer.addresses.address2' | t }}</label>
              <input
                type="text"
                id="AddressAddress2New"
                name="address[address2]"
                value="{{ form.address2 }}"
                autocomplete="address-line2"
                placeholder="{{ 'customer.addresses.address2' | t }}"
                class="tz-form-input"
              >
            </div>
            <div class="tz-form-field">
              <label for="AddressCityNew" class="tz-form-label">{{ 'customer.addresses.city' | t }}</label>
              <input
                type="text"
                id="AddressCityNew"
                name="address[city]"
                value="{{ form.city }}"
                autocomplete="address-level2"
                placeholder="{{ 'customer.addresses.city' | t }}"
                class="tz-form-input"
              >
            </div>
            <div class="tz-form-field">
              <label for="AddressCountryNew" class="tz-form-label">{{ 'customer.addresses.country' | t }}</label>
              <select
                id="AddressCountryNew"
                name="address[country]"
                data-default="{{ form.country }}"
                autocomplete="country"
                class="tz-form-select"
              >
                {{ all_country_option_tags }}
              </select>
            </div>
            <div id="AddressProvinceContainerNew" class="tz-form-field tz-form-full" style="display: none">
              <label for="AddressProvinceNew" class="tz-form-label">{{ 'customer.addresses.province' | t }}</label>
              <select
                id="AddressProvinceNew"
                name="address[province]"
                data-default="{{ form.province }}"
                autocomplete="address-level1"
                class="tz-form-select"
              ></select>
            </div>
            <div class="tz-form-field">
              <label for="AddressZipNew" class="tz-form-label">{{ 'customer.addresses.zip' | t }}</label>
              <input
                type="text"
                id="AddressZipNew"
                name="address[zip]"
                value="{{ form.zip }}"
                autocapitalize="characters"
                autocomplete="postal-code"
                placeholder="{{ 'customer.addresses.zip' | t }}"
                class="tz-form-input"
              >
            </div>
            <div class="tz-form-field">
              <label for="AddressPhoneNew" class="tz-form-label">{{ 'customer.addresses.phone' | t }}</label>
              <input
                type="tel"
                id="AddressPhoneNew"
                name="address[phone]"
                value="{{ form.phone }}"
                autocomplete="tel"
                placeholder="{{ 'customer.addresses.phone' | t }}"
                class="tz-form-input"
              >
            </div>
            <div class="tz-form-checkbox-group tz-form-full">
              {{ form.set_as_default_checkbox }}
              <label for="address_default_address_new">{{ 'customer.addresses.set_default' | t }}</label>
            </div>
            <div class="tz-form-actions tz-form-full">
              <button class="tz-submit-btn">{{ 'customer.addresses.add' | t }}</button>
              <button type="reset" class="tz-cancel-btn">{{ 'customer.addresses.cancel' | t }}</button>
            </div>
          {%- endform -%}
        </div>
      </div>

      <ul class="tz-address-list" role="list">
        {%- for address in customer.addresses -%}
          <li class="tz-address-card" data-address>
            {%- if address == customer.default_address -%}
              <span class="tz-address-default-badge">{{ 'customer.addresses.default' | t }}</span>
            {%- endif -%}
            
            <div class="tz-address-details">
              {{ address | format_address }}
            </div>

            <div class="tz-address-actions">
              <button
                type="button"
                class="tz-address-btn"
                id="EditFormButton_{{ address.id }}"
                aria-label="{{ 'customer.addresses.edit_address' | t }} {{ forloop.index }}"
                aria-controls="EditAddress_{{ address.id }}"
                aria-expanded="false"
                data-address-id="{{ address.id }}"
                data-toggle-address-form
              >
                {{ 'customer.addresses.edit' | t }}
              </button>
              <button
                type="button"
                class="tz-address-btn tz-address-btn--delete"
                aria-label="{{ 'customer.addresses.delete' | t }} {{ forloop.index }}"
                data-target="{{ address.url }}"
                data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}"
              >
                {{ 'customer.addresses.delete' | t }}
              </button>
            </div>

            <div id="EditAddress_{{ address.id }}" class="tz-address-form-container" style="margin-top: 2rem;">
              <h2 class="tz-address-form-title">{{ 'customer.addresses.edit_address' | t }}</h2>
              {%- form 'customer_address', address, class: 'tz-address-form' -%}
                <div class="tz-form-field">
                  <label for="AddressFirstName_{{ form.id }}" class="tz-form-label">{{ 'customer.addresses.first_name' | t }}</label>
                  <input
                    type="text"
                    id="AddressFirstName_{{ form.id }}"
                    name="address[first_name]"
                    value="{{ form.first_name }}"
                    autocomplete="given-name"
                    placeholder="{{ 'customer.addresses.first_name' | t }}"
                    class="tz-form-input"
                  >
                </div>
                <div class="tz-form-field">
                  <label for="AddressLastName_{{ form.id }}" class="tz-form-label">{{ 'customer.addresses.last_name' | t }}</label>
                  <input
                    type="text"
                    id="AddressLastName_{{ form.id }}"
                    name="address[last_name]"
                    value="{{ form.last_name }}"
                    autocomplete="family-name"
                    placeholder="{{ 'customer.addresses.last_name' | t }}"
                    class="tz-form-input"
                  >
                </div>
                <div class="tz-form-field tz-form-full">
                  <label for="AddressCompany_{{ form.id }}" class="tz-form-label">{{ 'customer.addresses.company' | t }}</label>
                  <input
                    type="text"
                    id="AddressCompany_{{ form.id }}"
                    name="address[company]"
                    value="{{ form.company }}"
                    autocomplete="organization"
                    placeholder="{{ 'customer.addresses.company' | t }}"
                    class="tz-form-input"
                  >
                </div>
                <div class="tz-form-field tz-form-full">
                  <label for="AddressAddress1_{{ form.id }}" class="tz-form-label">{{ 'customer.addresses.address1' | t }}</label>
                  <input
                    type="text"
                    id="AddressAddress1_{{ form.id }}"
                    name="address[address1]"
                    value="{{ form.address1 }}"
                    autocomplete="address-line1"
                    placeholder="{{ 'customer.addresses.address1' | t }}"
                    class="tz-form-input"
                  >
                </div>
                <div class="tz-form-field tz-form-full">
                  <label for="AddressAddress2_{{ form.id }}" class="tz-form-label">{{ 'customer.addresses.address2' | t }}</label>
                  <input
                    type="text"
                    id="AddressAddress2_{{ form.id }}"
                    name="address[address2]"
                    value="{{ form.address2 }}"
                    autocomplete="address-line2"
                    placeholder="{{ 'customer.addresses.address2' | t }}"
                    class="tz-form-input"
                  >
                </div>
                <div class="tz-form-field">
                  <label for="AddressCity_{{ form.id }}" class="tz-form-label">{{ 'customer.addresses.city' | t }}</label>
                  <input
                    type="text"
                    id="AddressCity_{{ form.id }}"
                    name="address[city]"
                    value="{{ form.city }}"
                    autocomplete="address-level2"
                    placeholder="{{ 'customer.addresses.city' | t }}"
                    class="tz-form-input"
                  >
                </div>
                <div class="tz-form-field">
                  <label for="AddressCountry_{{ form.id }}" class="tz-form-label">{{ 'customer.addresses.country' | t }}</label>
                  <select
                    id="AddressCountry_{{ form.id }}"
                    name="address[country]"
                    data-address-country-select
                    data-default="{{ form.country }}"
                    data-form-id="{{ form.id }}"
                    autocomplete="country"
                    class="tz-form-select"
                  >
                    {{ all_country_option_tags }}
                  </select>
                </div>
                <div id="AddressProvinceContainer_{{ form.id }}" class="tz-form-field tz-form-full" style="display:none;">
                  <label for="AddressProvince_{{ form.id }}" class="tz-form-label">{{ 'customer.addresses.province' | t }}</label>
                  <select
                    id="AddressProvince_{{ form.id }}"
                    name="address[province]"
                    data-default="{{ form.province }}"
                    autocomplete="address-level1"
                    class="tz-form-select"
                  ></select>
                </div>
                <div class="tz-form-field">
                  <label for="AddressZip_{{ form.id }}" class="tz-form-label">{{ 'customer.addresses.zip' | t }}</label>
                  <input
                    type="text"
                    id="AddressZip_{{ form.id }}"
                    name="address[zip]"
                    value="{{ form.zip }}"
                    autocapitalize="characters"
                    autocomplete="postal-code"
                    placeholder="{{ 'customer.addresses.zip' | t }}"
                    class="tz-form-input"
                  >
                </div>
                <div class="tz-form-field">
                  <label for="AddressPhone_{{ form.id }}" class="tz-form-label">{{ 'customer.addresses.phone' | t }}</label>
                  <input
                    type="tel"
                    id="AddressPhone_{{ form.id }}"
                    name="address[phone]"
                    value="{{ form.phone }}"
                    autocomplete="tel"
                    placeholder="{{ 'customer.addresses.phone' | t }}"
                    class="tz-form-input"
                  >
                </div>
                <div class="tz-form-checkbox-group tz-form-full">
                  {{ form.set_as_default_checkbox }}
                  <label for="address_default_address_{{ form.id }}">
                    {{ 'customer.addresses.set_default' | t }}
                  </label>
                </div>
                <div class="tz-form-actions tz-form-full">
                  <button class="tz-submit-btn">{{ 'customer.addresses.update' | t }}</button>
                  <button type="reset" class="tz-cancel-btn">{{ 'customer.addresses.cancel' | t }}</button>
                </div>
              {%- endform -%}
            </div>
          </li>
        {%- endfor -%}
      </ul>

      {%- if paginate.pages > 1 -%}
        {%- if paginate.parts.size > 0 -%}
          <nav class="tz-pagination" role="navigation" aria-label="{{ 'general.pagination.label' | t }}">
            <ul class="tz-pagination-list" role="list">
              {%- if paginate.previous -%}
                <li class="tz-pagination-item">
                  <a href="{{ paginate.previous.url }}" class="tz-pagination-link" aria-label="{{ 'general.pagination.previous' | t }}">
                    &laquo;
                  </a>
                </li>
              {%- endif -%}

              {%- for part in paginate.parts -%}
                <li class="tz-pagination-item">
                  {%- if part.is_link -%}
                    <a href="{{ part.url }}" class="tz-pagination-link" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                      {{- part.title -}}
                    </a>
                  {%- else -%}
                    {%- if part.title == paginate.current_page -%}
                      <span class="tz-pagination-current" aria-current="page" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                        {{- part.title -}}
                      </span>
                    {%- else -%}
                      <span class="tz-pagination-link">{{ part.title }}</span>
                    {%- endif -%}
                  {%- endif -%}
                </li>
              {%- endfor -%}

              {%- if paginate.next -%}
                <li class="tz-pagination-item">
                  <a href="{{ paginate.next.url }}" class="tz-pagination-link" aria-label="{{ 'general.pagination.next' | t }}">
                    &raquo;
                  </a>
                </li>
              {%- endif -%}
            </ul>
          </nav>
        {%- endif -%}
      {%- endif -%}
    </div>
  </div>
{%- endpaginate -%}

{% schema %}
{
  "name": "TZ Main Addresses",
  "settings": [
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ]
}
{% endschema %}
