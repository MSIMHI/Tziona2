        },
        {
          "value": "10",
          "label": "Fast (10s)"
        },
        {
          "value": "15",
          "label": "Medium Fast (15s)"
        },
        {
          "value": "20",
          "label": "Medium (20s)"
        },
        {
          "value": "25",
          "label": "Medium Slow (25s)"
        },
        {
          "value": "40",
          "label": "Very Slow (40s)"
        },
        {
          "value": "50",
          "label": "Extra Slow (50s)"
        },
        {
          "value": "60",
          "label": "Ultra Slow (60s)"
        },
        {
          "value": "80",
          "label": "Very Ultra Slow (80s)"
        },
        {
          "value": "100",
          "label": "Extremely Slow (100s)"
        },
        {
