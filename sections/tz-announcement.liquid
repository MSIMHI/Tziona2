{% style %}
  .tz-announcement {
  background-color: {{ section.settings.bg_color }};
  color: {{ section.settings.text_color }};
  border-bottom: 1px solid rgba(0,0,0,0.05);
  position: relative;
  z-index: 1002;
  overflow: hidden;
  line-height: 1.5;
  font-size: {{ section.settings.font_size }}px;
  font-weight: 700;
  }

  .tz-announcement a {
  text-decoration: underline;
  text-underline-offset: 3px;
  color: inherit;
  }
  .tz-announcement a:hover { opacity: 0.8; }

  /* Override global light mode styles - must be more specific */
  body.light .tz-announcement,
  body.light .tz-announcement *,
  body.light .tz-announcement p,
  body.light .tz-announcement span,
  body.light .tz-announcement div,
  body.light .tz-announcement a,
  html.light body .tz-announcement,
  html.light body .tz-announcement *,
  html.light body .tz-announcement p,
  html.light body .tz-announcement span,
  html.light body .tz-announcement div,
  html.light body .tz-announcement a,
  .light .tz-announcement,
  .light .tz-announcement *,
  .light .tz-announcement p,
  .light .tz-announcement span,
  .light .tz-announcement div,
  .light .tz-announcement a,
  html.light .tz-announcement,
  html.light .tz-announcement *,
  html.light .tz-announcement p,
  html.light .tz-announcement span,
  html.light .tz-announcement div,
  html.light .tz-announcement a {
    color: {{ section.settings.text_color }} ;
  }

  /* Dark Mode Support */
  .dark .tz-announcement,
  html.dark .tz-announcement {
    border-bottom-color: #333333 ;
  }

  .dark .tz-announcement *,
  html.dark .tz-announcement * {
    color: inherit;
  }

  /* Light Mode Support */
  .light .tz-announcement,
  html.light .tz-announcement {
    border-bottom-color: rgba(0,0,0,0.05) ;
  }

  /* --- STATIC MODE --- */
  .tz-announcement-inner {
  padding: 10px 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 40px;
  flex-wrap: wrap;
  gap: 30px;
  }

  /* --- MARQUEE MODE --- */
  .marquee-window {
  display: block;
  overflow: hidden;
  user-select: none;
  padding: 10px 0;
  direction: ltr; /* Force LTR for animation physics */
  }

  .marquee-mover {
  display: flex;
  width: fit-content;
  flex-shrink: 0;
  /* Move from 0 to -50% (halfway) to create infinite loop effect */
  animation: marquee-scroll {{ section.settings.speed }}s linear infinite;
  }

  .marquee-content-set {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  }

  .marquee-item {
  display: inline-flex;
  align-items: center;
  padding: 0 40px;
  white-space: nowrap;
  direction: rtl; /* Restore RTL for Hebrew text */
  }

  .tz-announcement:hover .marquee-mover {
  animation-play-state: paused;
  }

  @keyframes marquee-scroll {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
  }
{% endstyle %}

<!-- CAPTURE CONTENT -->
{% capture announcement_text %}
{%- for i in (1..10) -%}
{%- for block in section.blocks -%}
<div class="marquee-item uppercase" {% if i==1 and forloop.first %}{{ block.shopify_attributes }}{% endif %}>
    {%- if block.settings.link != blank -%}
    <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
    {%- else -%}
    <span>{{ block.settings.text }}</span>
    {%- endif -%}
</div>
{%- endfor -%}
{%- endfor -%}
{% endcapture %}

<div class="tz-announcement" role="region" aria-label="Announcement">
  {% if section.settings.enable_marquee %}
    <!-- MARQUEE -->
    <div class="marquee-window">
      <div class="marquee-mover">
        <div class="marquee-content-set">
          {{ announcement_text }}
        </div>
        <div class="marquee-content-set" aria-hidden="true">
          {{ announcement_text }}
        </div>
      </div>
    </div>
  {% else %}
    <!-- STATIC -->
    <div class="tz-announcement-inner">
      {%- for block in section.blocks -%}
        <div class="uppercase" {{ block.shopify_attributes }}>
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
          {%- else -%}
            <span>{{ block.settings.text }}</span>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  {% endif %}
</div>

