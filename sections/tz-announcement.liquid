    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Message",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Welcome to our store"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee Announcement",
      "blocks": [{ "type": "announcement" }, { "type": "announcement" }]
    }
  ]
}
