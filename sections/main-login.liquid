{{ 'tz-main-login.css' | asset_url | stylesheet_tag }}
<script src="{{ 'tz-main-login.js' | asset_url }}" defer="defer"></script>

<div class="tz-login-section">
  <div class="tz-login-container">
    <div id="recover" tabindex="-1"></div>

    <!-- Login Header -->
    <div class="tz-login-header">
      <h1 class="tz-login-title">{{ 'customer.login_page.title' | t }}</h1>
      <p class="tz-login-subtitle">{{ 'customer.login_page.subtext' | t }}</p>
    </div>

    <!-- Login Form -->
    <div id="login-form-container">
      {%- if recover_success == true -%}
        <div class="tz-form-success" tabindex="-1" autofocus>
          {{ 'customer.recover_password.success' | t }}
        </div>
      {%- endif -%}

      {%- form 'customer_login', class: 'tz-login-form', novalidate: 'novalidate' -%}
        {%- if form.errors -%}
          <div class="tz-form-error" tabindex="-1" autofocus>
            <div class="tz-form-error-title">
               {{ 'templates.contact.form.error_heading' | t }}
            </div>
            <ul>
              {%- for field in form.errors -%}
                <li>
                  {%- if field == 'form' -%}
                    {{ form.errors.messages[field] }}
                  {%- else -%}
                    <a href="#Customer{{ field | capitalize }}">
                      {{ form.errors.translated_fields[field] | capitalize }}
                      {{ form.errors.messages[field] }}
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}

        <div class="tz-form-field">
          <label for="CustomerEmail" class="tz-form-label">{{ 'customer.login_page.email_label' | t }}</label>
          <input
            type="email"
            name="customer[email]"
            id="CustomerEmail"
            autocomplete="email"
            autocorrect="off"
            autocapitalize="off"
            class="tz-form-input"
            placeholder="{{ 'customer.login_page.email_placeholder' | t }}"
            required
          >
        </div>

        {%- if form.password_needed -%}
          <div class="tz-form-field">
            <label for="CustomerPassword" class="tz-form-label">{{ 'customer.login_page.password_label' | t }}</label>
            <input
              type="password"
              name="customer[password]"
              id="CustomerPassword"
              autocomplete="current-password"
              class="tz-form-input"
              placeholder="{{ 'customer.login_page.password_placeholder' | t }}"
              required
            >
          </div>

          <div class="tz-form-options">
            <label class="tz-checkbox-label">
              <input type="checkbox" name="remember" class="tz-checkbox">
              <span>{{ 'customer.login_page.remember_me' | t }}</span>
            </label>
            <a href="#recover" class="tz-form-link">{{ 'customer.login_page.forgot_password' | t }}</a>
          </div>
        {%- endif -%}

        <button type="submit" class="tz-submit-btn">
          {{ 'customer.login_page.sign_in' | t }}
        </button>
      {%- endform -%}

      <div class="tz-login-divider">
        <div class="tz-divider-line"></div>
        <span class="tz-divider-text">{{ 'customer.login_page.alternate_provider_separator' | t }}</span>
        <div class="tz-divider-line"></div>
      </div>

      <p class="tz-register-prompt">
        {{ 'customer.login_page.no_account' | t }}
        <a href="{{ routes.account_register_url }}" class="tz-register-link">
          {{ 'customer.login_page.create_account' | t }}
        </a>
      </p>
    </div>

    <!-- Recover Password Form -->
    <div id="recover-form-container">
      <div class="tz-login-header">
        <h1 class="tz-login-title">{{ 'customer.recover_password.title' | t }}</h1>
        <p class="tz-login-subtitle">{{ 'customer.recover_password.subtext' | t }}</p>
      </div>

      {%- form 'recover_customer_password', class: 'tz-login-form' -%}
        {% assign recover_success = form.posted_successfully? %}
        {%- if form.errors -%}
          <div class="tz-form-error" tabindex="-1" autofocus>
            {{ form.errors.messages.form }}
          </div>
        {%- endif -%}

        <div class="tz-form-field">
          <label for="RecoverEmail" class="tz-form-label">{{ 'customer.login_page.email_label' | t }}</label>
          <input
            type="email"
            value=""
            name="email"
            id="RecoverEmail"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            class="tz-form-input"
            placeholder="{{ 'customer.login_page.email_placeholder' | t }}"
            required
          >
        </div>

        <button type="submit" class="tz-submit-btn">
          {{ 'customer.login_page.submit' | t }}
        </button>

        <div class="tz-register-prompt" style="margin-top: 1rem;">
          <a href="#login" class="tz-form-link">
            {{ 'customer.login_page.cancel' | t }}
          </a>
        </div>
      {%- endform -%}
    </div>

    {%- if shop.checkout.guest_login -%}
      <div class="tz-login-divider">
        <div class="tz-divider-line"></div>
      </div>
      <div class="tz-register-prompt">
        <h2 class="tz-login-subtitle" style="margin-bottom: 1rem;">{{ 'customer.login_page.guest_title' | t }}</h2>
        {%- form 'guest_login' -%}
          <button class="tz-submit-btn" style="margin-top: 0;">
            {{ 'customer.login_page.guest_continue' | t }}
          </button>
        {%- endform -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "TZ Main Login",
  "settings": [
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ]
}
{% endschema %}
